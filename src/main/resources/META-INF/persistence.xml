<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="wtf">
        <class>fr.afpa.testhibernate.entite.Livre</class>
        <class>fr.afpa.testhibernate.entite.Contributeur</class>
        <class>fr.afpa.testhibernate.entite.Contribution</class>
        <class>fr.afpa.testhibernate.entite.Theme</class>
        <class>fr.afpa.testhibernate.entite.Exemplaire</class>
        <class>fr.afpa.testhibernate.entite.Emprunt</class>
        <class>fr.afpa.testhibernate.entite.Emplacement</class>
        <class>fr.afpa.testhibernate.entite.Usure</class>
        <class>fr.afpa.testhibernate.entite.Bibliotheque</class>
        <class>fr.afpa.testhibernate.entite.Employe</class>
        <class>fr.afpa.testhibernate.entite.Role</class>
        <class>fr.afpa.testhibernate.entite.Utilisateur</class>
        <class>fr.afpa.testhibernate.entite.LivreContributionContributeur</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>

            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/jpa?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user"
                      value="toto"/>
            <property name="javax.persistence.jdbc.password"
                      value="toto"/>
        </properties>
    </persistence-unit>

</persistence>
